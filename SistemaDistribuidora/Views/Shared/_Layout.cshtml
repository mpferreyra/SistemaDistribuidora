<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaDistribuidora</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*TODO: agregado para mas comodida visual al trabajar*@
    <style>
        body {
            background-color: dimgrey;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">                
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OfertaDetalle" asp-action="OfertasGestorView">Ofertas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" >
                                Nomencladores
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Categoria" asp-action="Index">Categorias</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Marca" asp-action="Index">Marcas</a>
                                <a class="dropdown-item" asp-area="" asp-controller="UnidadMedida" asp-action="Index">Unidades de medida</a>
                                <a class="dropdown-item" asp-area="" asp-controller="SolicitudUsuarioCliente" asp-action="Index">Solicitudes de usuario</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Loggin" asp-action="LogginView">Loggin</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Persona" asp-action="Index">Personas</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
                                <a class="dropdown-item" asp-area="" onclick="location.href='@Url.Action("CargarValoresDefecto", "TipoUsuario")'">Tipo usuarios defecto</a>
                                <a class="dropdown-item" asp-area="" asp-controller="EstadoSolicitud" asp-action="CargarValoresDefecto">Tipo estados defecto</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Index">Importar informacion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SistemaDistribuidora - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
