@model IEnumerable<SistemaDistribuidora.Models.SolicitudUsuarioClienteModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Solicitudes</h1>

<p>
    <a asp-action="Create">Crear nueva solicitud</a>
</p>
<form asp-action="Index" method="get">
    <div class="row">
        <div class="form-group">
            <label typeof="Text" class="control-label">Razon Social</label>
            <input typeof="Text" name="SearchRazon" class="form-control" value="@ViewData["SearchRazon"]" />
        </div>
        <div class="col-md-4">
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label typeof="Text" class="control-label">CUIT</label>
            <input typeof="number" name="SearchCUIT" class="form-control" value="@ViewData["SearchCUIT"]" />
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label typeof="Text" class="control-label">Estado</label>
            <select name="Estado" typeof="text" class="form-control" asp-items="ViewBag.SearchEstado"></select>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label typeof="Text" class="control-label">Permisos</label>
            <select name="Tipo"  typeof="text" class="form-control" asp-items="ViewBag.SearchTipo"></select>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RazonSocialCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CUIT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActividadComercialCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombresPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoSolicitud.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RazonSocialCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CUIT)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.ActividadComercialCliente)
                </td>    
                <td>
                    @Html.DisplayFor(modelItem => item.NombresPersona)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPedido)
                </td>
                <td>
                    @*ERROR: no lo muestra, si pongo el id si muestra el id*@
                    @Html.DisplayFor(modelItem => item.EstadoSolicitud.Descripcion)
                </td>    
                <td>
                    @*ERROR: no lo muestra, si pongo el id si muestra el id*@
                    @Html.DisplayFor(modelItem => item.TipoUsuario.Descripcion)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.SolicitudUsuarioClienteId">Editar</a> |*@                    
                    <a asp-action="Revisar" asp-route-id="@item.SolicitudUsuarioClienteId">Revisar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

